<%- include('supervisorDashboardHeader.ejs') %>



<div class="row m-2">
  <% theses.forEach(thesis=> { %>

  <div class="card mb-3 col-4 m-2">
    <div class="card-body">
      <span>
        <h4 class="card-title "><i class="fas fa-graduation-cap"></i>
          <%=thesis.title%>
          </h5>
      </span>
      <p class="card-text">
        <br>
        <strong>Field: </strong>
        <%=thesis.field%>
        <br>
        <strong>Type: </strong>
        <% if (thesis.type) { %>
        PHD
        <% } else { %>
        MASTER
        <% } %>
        <br>
        <br>
        <button type="button" class="btn btn-primary view-btn" data-bs-toggle="modal" data-bs-target="#staticBackdrop<%=thesis.serial_number%>">
          <i class="fas fa-info"></i> More Info
        </button>
        <button type="button" class="btn btn-primary view-btn" >
          <i class="fas fa-user-shield"></i> Add Defence
        </button>


        <!-- Modal -->
      <div class="modal fade" id="staticBackdrop<%=thesis.serial_number%>" data-bs-backdrop="static"  tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="">
                <%=thesis.title%>
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

        <table class="table table-striped table-bordered">
